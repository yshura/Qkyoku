<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5'>
      <h2 class='register'>
        新規登録
      </h2>
      <div class='mx-4 mt-4'>
        <%= form_with model: @user, url: user_registration_path do |f| %>
          <%= render 'devise/shared/error_messages', resource: resource %>
          <div class='field mt-3'>
            <%= f.text_field :name, placeholder: '名前', size: 40 %>
          </div>
          <div class='field mt-3'>
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'メールアドレス', size: 40 %>
          </div>
          <div class='field mt-3'>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: 'new-password', placeholder: 'パスワード', size: 40 %>
          </div>
          <div class='field mt-3'>
            <%= f.password_field :password_confirmation, autocomplete: 'new-password', placeholder: 'パスワード再入力', size: 40 %>
          </div>
          <div class='actions mt-3'>
            <%= f.submit '登録', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>