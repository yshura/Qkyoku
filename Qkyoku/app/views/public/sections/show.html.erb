<div class='container'>
  <div class='row'>
    <%= render 'public/sections/index' %>
    <div class='col-md-8 offset-md-1 mt-5'>
      <h2>"<%= @section.name %>"工程</h2>
        <table class='table table-hover table-inveerse'>
          <thead>
           <tr>
             <th>投稿日</th>
             <th>投稿者</th>
             <th>工程</th>
             <th>タイトル</th>
             <th>コメント数</th>
             <th>既読</th>
           </tr>
          </thead>
          <tbody>
            <% @section.posts.each do |post| %>
              <tr>
                <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= link_to public_user_path(post.user), class: 'text-dark' do %>
                      <%= post.user.name %>
                    <% end %>
                </td>
                <td><%= post.section.name %></td>
                <td><%= link_to public_post_path(post), class: 'text-dark' do %>
                      <%= post.title %>
                    <% end %>
                </td>
                <td><%= post.comments.count %>件</td>
                <!--既読、未読機能-->
                <td><% if post.user == current_user %>
                      --
                    <% else %>
                      <%= Check.find_by(user_id: current_user.id, post_id: post.id) ? '既読' : '未読' %>
                    <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
<%= render 'layouts/back' %>