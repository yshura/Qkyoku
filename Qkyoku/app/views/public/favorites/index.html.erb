<div class='container'>    
    <div class='col-md-4 mt-4 mb-3'>
      <h2>いいね一覧</h2>
    </div>
    <table class= "table table-hover table-inveerse">
      <thead>
        <tr>
          <th>投稿者</th>
          <th>投稿日</th>
          <th>コメント内容</th>
          <th>ステータス</th>
        </tr>
        <tbody>
          <% @favorites.each do |favorite| %>
          <tr>
            <td><%= favorite.comment.user.name %></td>
            <td>
              <%#= link_to public_post_path(@post) do %>
              <%= favorite.comment.created_at.strftime('%Y/%m/%d') %>
              <%# end %>
            </td>
            <td><%= favorite.comment.comment_body %></td>
            <td><%= favorite.comment.execution_status.name %></td>
          </tr>
          
          <% end %>
          </tbody>
      </thead>
    </table>
</div>