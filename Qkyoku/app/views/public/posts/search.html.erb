<h2>検索結果 "<%= @keyword %>"</h2>
  <ul>
    <% @posts.each do |post| %>
      <li>
        <%= post.user.name %>
      </li>
      <li>
        <%= post.created_at.strftime('%Y/%m/%d') %>
      </li>
      <li>
        <%= post.section.name %>
      </li>
      <li>
        <%= post.title %>
      </li>
      <li>
        <%= post.comments.count %>件
      </li>
    <% end %>
  </ul>