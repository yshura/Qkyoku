<div class='container'>
  <div class='row'>
    <div class='col-md-8 mt-4 mb-3 mx-auto'>
      <h2>通知</h2>
      <%= link_to public_notifications_destroy_all_path, class: 'text-dark', method: :delete do %>
        <i class='fas fa-trash' style='color: black;'></i>
        <h7>全削除</h7>
      <% end %>
      <hr>
      <% if @notifications.exists? %>
        <div>
          <%= render 'index', notifications: @notifications %>
        </div>
      <% else %>
        <p>通知はありません</p>
      <% end %>
      <div class='mt-3' style='margin:0 auto;'>
        <%= paginate @notifications %>
      </div>
    </div>
  </div>
</div>