<div class='container mb-5'>   
  <div class='row'>
    <div class='col-md-3 mt-5'>
      <div class='card'>
        <div class='card-body'>
          <h5 class='mt-2'>
            <span class='badge badge-pill badge-secondary appearance'>name</span><br>
            <%= @user.name %>
          </h5>
          <h5 class='mt-3'>
            <span class='badge badge-pill badge-secondary appearance'>email</span><br>
            <%= @user.email %>
          </h5>
        </div>
        <% if @user.email != 'guest@example.com' %>
          <% if @user == current_user %>
            <%= form_with model: @user, url: public_user_path(@user), method: :patch, local:true do |f| %>
              <div class='form-group mx-1'>
                <%= f.label '名前の変更' %>
                <%= f.text_field :name, size: 12, class: 'form-control' %>
              </div>
              <div class='form-group mx-1 mt-1'>
                <%= f.submit '変更', class: 'btn btn-outline-success' %>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <% if @user == current_user %>
          <div class='mx-1'>
            <%= link_to public_user_notifications_path(@user), class: 'btn btn-secondary btn-block' do %>
              <% if unchecked_notifications.any? %>
                <div class='news'>
                </div>
              <% end %>
              <i class='fas fa-bell'></i>
            <% end %>
          </div>
        <% end %>
        <div class='mt-2 mx-1'>
          <%= link_to public_user_favorites_path(@user), class: 'btn btn-info btn-block' do %>
            <i class='fas fa-heart'></i>
          <% end %>
        </div>
        <div class='mt-2 mb-2 mx-1'>
          <%= link_to public_user_comments_path(@user), class: 'btn btn-primary btn-block' do %>
            <i class='fas fa-comment-dots'></i>
          <% end %>
        </div>
        <% if @user.email != 'guest@example.com' %>
          <% if @user == current_user %>
            <div class='mb-2 mx-1'>
              <%= link_to public_unsubscribe_path, class:'btn btn-danger btn-block' do %>
                <i class='fas fa-sign-out-alt'></i>
              <% end %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class='mt-5'>投稿</h2>
      <%= render 'public/posts/index', posts: @user.posts %>
    </div>
    <div style='margin:0 auto;'>
      <%= paginate @posts %>
    </div>
  </div>
</div>