<div class='container'>   
  <div class='row'>
    <div class='col-md-3 card mt-5'>
      <div class='card-body'>
        <h5 class='mt-2'>
          <span class='badge badge-pill badge-secondary' style ='font-size: 12px'>name</span><br>
          <%= @user.name %>
        </h5>
        <h5 class='mt-3'>
          <span class='badge badge-pill badge-secondary' style ='font-size: 12px'>email</span><br>
          <%= @user.email %>
        </h5>
      </div>
      <% if @user.email != 'guest@example.com' %>
        <% if @user == current_user %>
          <%= form_with model: @user, url: public_user_path(@user), method: :patch, local:true do |f| %>
            <div class='field'>
              <%= f.label '名前の変更' %><br>
              <%= f.text_field :name, size: 28 %>
            </div>
            <div class='form-group mx-auto mt-1'>
              <%= f.submit '変更', class: 'btn btn-outline-success' %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <div><%= link_to 'いいね', public_user_favorites_path(@user), class: 'btn btn-info btn-block' %></div>
      <div class='mt-2 mb-2'><%= link_to '過去のコメント', public_user_comments_path(@user), class: 'btn btn-primary btn-block' %></div>
      <% if @user.email != 'guest@example.com' %>
        <% if @user == current_user %>
          <div class='mb-2'><%= link_to '退会', public_unsubscribe_path, class:'btn btn-danger btn-block' %></div>
        <% end %>
      <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class='mt-5'>投稿</h2>
      <%= render 'public/posts/index', posts: @user.posts %>
    </div>
  </div>
</div>