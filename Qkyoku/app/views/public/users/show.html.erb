<div class='container'>   
  <div class='row'>
    <div class='col-md-3'>
      <table class='table table-bordered mt-5'>
        <thead>
          <tr>
            <th>氏名</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <th><%= @user.email %></th>
          </tr>
        </thead>
      </table>
      <% if @user.email != 'guest@example.com' %>
        <% if @user == current_user %>
          <%= form_with model: @user, url: public_user_path(@user), method: :patch, local:true do |f| %>
            <div class="field">
              <%= f.label '名前の変更' %><br>
              <%= f.text_field :name, size: 28 %>
            </div>
            <div class="form-group">
              <%= f.submit '更新', class: 'btn btn-success' %>
            </div>
          <% end %>
        <% end %>
      <% end %>
      <% if @user.email != 'guest@example.com' %>
        <% if @user == current_user %>
          <div><%= link_to '退会', public_unsubscribe_path, class:'btn btn-danger btn-block' %></div>
        <% end %>
      <% end %>
      <div><%= link_to 'いいね', public_user_favorites_path(@user), class: 'btn btn-info btn-block' %></div>
      <div><%= link_to '過去のコメント', public_user_comments_path(@user), class: 'btn btn-primary btn-block' %></div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class='mt-5'>投稿</h2>
      <%= render 'public/posts/index', posts: @user.posts %>
    </div>
  </div>
</div>