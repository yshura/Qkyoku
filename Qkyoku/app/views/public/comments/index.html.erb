<div class='container'>
  <div class='row'>    
    <div class='mt-4 mb-3'>
      <h2><%= @user.name %>さんの過去のコメント</h2>
    </div>
  </div>
</div>
<div class='container card'>
  <div class='card-body'>
    <% @comments.each do |comment| %>
      <p><%= render 'public/posts/comment.show', comment: comment, post: comment.post.id %></p>
    <% end %>
  </div>
</div>
<div class='mt-3 ml-3 mb-3'>
  <%= link_to public_user_path(@user), class: 'text-dark' do %>
    <i class="fas fa-angle-double-left"></i>前のページへ戻る
  <% end %>
</div>
  <%#= paginate @comments %>
