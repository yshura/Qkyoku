<div class='container'>
  <div class='row'>   
    <div class='col-md-8 mt-4 mb-3 mx-auto'>
      <h2>コメント編集</h2>
      <div class='card'>
        <div class='card-body'>
          <%= render 'layouts/error', model: @comment %>
          <%= form_with model: @comment, url: public_post_comment_path(@post), method: :patch, local:true do |f| %>
            <div class='form-group'>
              <%= f.label 'ステータス',for: 'execution_status_select' %>
              <%= f.collection_select :execution_status_id, @status, :id, :name, {include_blank: '--ステータスを選択--'},class: 'form-control', id: 'execution_status_select' %>
            </div>
            <div class='form-group'>
              <%= f.label '画像' %>
        　     <%= f.file_field :image, accept: 'image/*', class: 'form-control-file admin_image' %>
            </div>
            <div class='form-group'>
              <%= f.label 'コメント内容' %>
              <%= f.text_area :comment_body, class: 'form-control item_description', placeholder: '内容を入力', size:'50x10' %>
            </div>
            <div class="form-group">
              <%= f.submit '更新', class: 'btn btn-outline-success' %>
              <p class='mt-2'>
                <% if @comment.user == current_user %>
                  <%= link_to "削除", public_post_comment_path(@post), method: :delete, class: 'btn btn-outline-danger' %>
                <% end %>
              </p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>