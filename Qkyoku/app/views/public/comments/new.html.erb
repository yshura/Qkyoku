<div class='container'>
  <div class='row'>   
    <div class='col-md-4 mt-4 mb-3'  style='display:flex; flex-wrap:wrap;'>
      <h2>コメント</h2>
    </div>
    <div>
      <%= form_with model: @comment, url: public_comments_path, method: :post, local:true do |f| %>
        <!--ステータス追加-->
        <div class='form-group'>
          <%= f.label '画像' %>
    　    <%= f.file_field :image, accept: 'image/*', class: 'form-control-file admin_image' %>
        </div>
        <div class='form-group'>
          <%= f.label 'コメント内容' %>
          <%= f.text_area :comment_body, class: 'form-control item_description', placeholder: '内容を入力' %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>