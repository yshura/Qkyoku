<header>
　<!--ユーザーログイン後のヘッダー-->
  <% if user_signed_in? %>
    <li>
      <%= link_to 'HOME', public_users_path %>
    </li>
    <li>
      <%= link_to '投稿一覧', public_posts_path %>
    </li>
    <li>
      <%= link_to '新規投稿', new_public_post_path %> 
    </li>
    <li>
      <%= link_to 'マイページ', public_user_path(current_user) %>
    </li>
    <li>
      <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    </li>
    <li>
      <%= form_with url: search_public_posts_path, local: true, method: :get do |f| %>
        <%= f.text_field :keyword %>
        <%= f.submit "検索" %>
      <% end %>
    </li>
  <!--管理者ログイン後のヘッダー-->
  <% elsif admin_signed_in? %>
    <li>
      <%= link_to 'ステータス一覧', admin_execution_statuses_path %>
    </li>
    <li>
      <%= link_to '工程一覧', admin_sections_path %>
    </li>
    <li>
      <%= link_to '投稿一覧' %>
    </li>
    <li>
      <%= link_to '会員一覧', admin_users_path %> 
    </li>
    <li>
      <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
    </li>
  <!--ゲストログイン後のヘッダー-->
  <%# elsif guest_signed_in? %>
    <li>
      <%#= link_to 'HOME', root_path %>
    </li>
    <li>
      <%#= link_to '投稿一覧', public_posts_path %>
    </li>
    <li>
      <%#= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
    </li>
　<!--ログイン前のヘッダー-->
  <% else %>
  　<li>
  　 <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post, class: "login" %>
  　</li>
    <li>
      <%= link_to 'ログイン', new_user_session_path %>
    </li>
    <li>
      <%= link_to '新規登録', new_user_registration_path %>
    </li>
    
  <% end %>
</header>