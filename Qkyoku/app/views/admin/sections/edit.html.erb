<div class='container'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-3 mx-auto'>
      <h2>工程名編集</h2>
      <div class='card'>
        <div class='mx-1 mt-4'>
          <%= form_with model: @section, url: admin_section_path(@section.id), method: :patch, local:true do |f| %>
            <div class='form-group'>
              <%= f.label '工程名' %>
              <%= f.text_field :name, class: 'form-control', placeholder: '工程を入力' %>
          　</div>
          　<div class='form-group'>
              <%= f.submit '更新', class: 'btn btn-outline-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>