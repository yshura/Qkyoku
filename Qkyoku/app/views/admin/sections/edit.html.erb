<div class='col-md-4 mt-4 mb-3'  style='display:flex; flex-wrap:wrap;'>
  <h2>工程名編集</h2>
</div>
<%= form_with model: @section, url: admin_section_path(@section.id), method: :patch, local:true do |f| %>
  <div class='form-group'>
    <%= f.label '工程名' %>
    <%= f.text_field :name, class: 'form-control name', placeholder: '工程を入力' %>
　</div>
　<div class="form-group">
    <%= f.submit "更新", class: 'btn btn-success' %>
  </div>
<% end %>