<div class='col-md-3 mt-3'>
  <div class='card'>
    <div class='mx-1 mt-4'>
      <%= form_with model: section, url: admin_sections_path, method: :post, local:true do |f| %>
        <div class='field'>
          <%= f.text_field :name, class: 'form-control name', placeholder: '工程を入力' %>
        </div>
        <div class='form-group mt-3'>
          <%= f.submit '追加', class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
  