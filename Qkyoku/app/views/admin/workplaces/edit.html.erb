<div class='container'>
  <div class='row'>
    <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-5'>
      <h2 class='register'>職場編集</h2>
      <div class='card'>
        <div class='mx-4 mt-4'>
          <%= form_with model: @workplace, url: admin_workplace_path(@workplace.id), method: :patch, local:true do |f| %>
            <div class='field'>
              <%= f.text_field :name, class: 'form-control', placeholder: '職場名を入力' %>
          　</div>
          　<div class='form-group mt-3'>
              <%= f.file_field :image, accept: 'image/*', class: 'form-control-file admin_image', placeholder: '職場名を入力' %>
            </div>
            <div class='mt-3'>
              <%= f.label 'ステータス' %>
              <%= f.radio_button :is_checked, true %>
              <%= f.label :is_checked, '有効', value: true %>
              <%= f.radio_button :is_checked, false %>
              <%= f.label :is_checked, '無効', value: false %>
            </div>
            <div class='form-group mt-3'>
            <%= f.submit '更新', class: 'btn btn-outline-success' %>
            </div>
            <p class='mt-2'>
              <%= link_to '削除', admin_workplace_path(@workplace), method: :delete, class: 'btn btn-outline-danger' %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render 'layouts/back' %>