<div class='col-md-3 mt-3'>
  <div class='card'>
    <div class='mx-1 mt-4'>
      <%= form_with model: workplace, url: admin_workplaces_path, method: :post, local:true do |f| %>
        <div class='field'>
          <%= f.text_field :name, class: 'form-control name', placeholder: '職場名を入力' %>
        </div>
        <div class='form-group mt-3'>
          <%= f.file_field :image, accept: 'image/*', class: 'form-control-file admin_image', placeholder: '職場名を入力' %>
        </div>
        <div class='mt-3'>
          <%= f.label 'ステータス' %>
          <%= f.radio_button :is_checked, true %>
          <%= f.label :is_checked, '有効', value: true %>
          <%= f.radio_button :is_checked, false %>
          <%= f.label :is_checked, '無効', value: false %>
        </div>
        <div class='form-group mt-3'>
          <%= f.submit '追加', class: 'btn btn-outline-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>