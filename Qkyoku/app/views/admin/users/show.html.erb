<div class='container'>   
  <div class='row'>
    <div class='col-md-3 card mt-5'>
      <div class='card-body'>
        <h5 class='mt-2'>
          <span class='badge badge-pill badge-secondary appearance'>id</span><br>
          <%= @user.id %>
        </h5>
        <h5 class='mt-3'>
          <span class='badge badge-pill badge-secondary appearance'>name</span><br>
          <%= @user.name %>
        </h5>
        <h5 class='mt-3'>
          <span class='badge badge-pill badge-secondary appearance'>email</span><br>
          <%= @user.email %>
        </h5>
        <h5 class='mt-3'>
          <span class='badge badge-pill badge-secondary appearance'>status</span><br>
          <% if @user.is_deleted == true %>
          <span class='text-secondary'><strong>退会</strong></span>
          <% else %>
          <span class='text-success'><strong>有効</strong></span>
          <% end %>
        </h5>
      </div>
      <div>
        <%= link_to edit_admin_user_path(@user), class: "btn btn-secondary btn-block edit_#{@user.id}" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>
      <div class='mt-2 mb-2'>
        <%= link_to admin_user_comments_path(@user), class: 'btn btn-primary btn-block' do %>
          <i class="fas fa-comment-dots"></i>
        <% end %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2 class='mt-5'>投稿</h2>
      <%= render 'admin/posts/index', posts: @user.posts %>
    </div>
    <div style="margin:0 auto;">
      <%= paginate @posts %>
    </div>
  </div>
</div>
<%= render 'layouts/back' %>