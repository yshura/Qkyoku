<div class='container'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-3 mx-auto'>
      <h2>ステータス名編集</h2>
      <div class='card'>
        <div class='mx-1 mt-4'>
          <%= form_with model: @execution_status, url: admin_execution_status_path(@execution_status.id), method: :patch, local:true do |f| %>
            <div class='form-group'>
              <%= f.label 'ステータス名' %>
              <%= f.text_field :name, class: 'form-control', placeholder: 'ステータスを入力' %>
            </div>
            <div class='form-group'>
              <%= f.submit '更新', class: 'btn btn-outline-success' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>