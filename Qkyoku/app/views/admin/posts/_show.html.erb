<div class='row'>
  <p class='col-md-2'>
    <%= link_to admin_user_path(post.user), class: 'text-dark' do %>
      <%= post.user.name %>
    <% end %>
  </p>
  <p class='col-md-4'>
    <span class='badge badge-pill badge-secondary appearance'>
      工程
    </span>
    <%= post.section.name %>
  <p>
  <p class='col-md-6'>
    <span class='badge badge-pill badge-secondary appearance'>
      投稿日
    </span>
    <%= post.created_at.strftime('%Y/%m/%d') %>
  </p>
</div>
<div class='row no-gutters'>
  <div class='col'>
    <h3 class='card-title'>
      <%= post.title %>
    </h3>
  </div>
</div>
<div class='row'>
  <div class='col-md-4'>
    <% if post.image.present? %>
      <%= link_to post.image, 'data-lightbox': post.image do %>  
        <%= image_tag post.image, class:'img-fluid' %>
      <% end %>
    <% else %>
        <%= image_tag 'no_image.jpg', class:'img-fluid' %>
    <% end %>
  </div>
  <div class='col-md-7'>
    <p class='card-text'><%= post.post_body %></p>
  </div>
  <div class='col-1'>
    <%= link_to '削除', admin_post_path(post), method: :delete, class: 'btn btn-outline-danger' %>
  </div>
</div>