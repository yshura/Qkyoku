<div class='container'>
  <div class='row'>
    <div class='col-md-4 mt-4 mb-1'>
      <h2>投稿一覧</h2>
      <%= link_to '新しい順', admin_posts_path(latest: 'true'), class: 'text-dark' %>
        |<%= link_to '古い順', admin_posts_path(old: 'true'), class: 'text-muted' %>
      <%# else %>
        <%#= link_to '新しい順', public_posts_path(latest: 'true'), class: 'text-muted' %>
        <%#= link_to '古い順', public_posts_path(old: 'true'), class: 'text-dark' %>
      <%# end %>
    </div>
    <p>
      <%= render 'index', posts: @posts %>
    </p>  
    <div style="margin:0 auto;">
      <%= paginate @posts %>
    </div>
  </div>
</div>
<%= render 'layouts/back' %>