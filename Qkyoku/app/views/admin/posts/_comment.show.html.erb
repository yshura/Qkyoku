<div class='row'>
  <p class='col-md-2'>
    <%= link_to admin_user_path(comment.user) do %>
      <%= comment.user.name %>
    <% end %>  
  </p>
  <p class='col-md-4'>
    ステータス：<%= comment.execution_status.name %>
  </p>
  <p class='col-md-6'>
    投稿日：<%= comment.created_at.strftime('%Y/%m/%d') %>
  </p>
</div>
<div class='row'>
  <div class='col-md-4'>
    <% if comment.image.present? %>
      <%= link_to comment.image, 'data-lightbox': comment.image do %>
      　<%= image_tag comment.image, class:'img-fluid' %>
      <% end %>
    <% else %>
      <%= image_tag 'no_image.jpg', class:'img-fluid' %>
    <% end %>
  </div>
  <div class='col-md-7'>
    <p class='card-text'>
      <%= link_to admin_post_path(post), class: 'nav-link text-dark' do %>
        <%= comment.comment_body %>
      <% end %>
    </p>
  </div>
</div>
<span>♡<%= comment.favorites.count %>︎</span>