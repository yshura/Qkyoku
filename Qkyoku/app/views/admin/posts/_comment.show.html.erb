<div class='row'>
  <p class='col-md-2'>
    <%= link_to admin_user_path(comment.user), class: 'text-dark' do %>
      <%= comment.user.name %>
    <% end %>  
  </p>
  <p class='col-md-4'>
    <span class='badge badge-pill badge-secondary appearance'>
      ステータス
    </span>
    <%= comment.execution_status.name %>
  </p>
  <p class='col-md-6'>
    <span class='badge badge-pill badge-secondary appearance'>
      投稿日
    </span>
    <%= comment.created_at.strftime('%Y/%m/%d') %>
  </p>
</div>
<div class='row'>
  <div class='col-md-4'>
    <% if comment.image.present? %>
      <%= link_to comment.image, 'data-lightbox': comment.image do %>
      　<%= image_tag comment.image, class:'img-fluid' %>
      <% end %>
    <% else %>
      <%= image_tag 'no_image.jpg', class:'img-fluid' %>
    <% end %>
  </div>
  <div class='col-md-7'>
    <p class='card-text'>
      <%= link_to admin_post_path(post), class: 'text-dark' do %>
        <%= comment.comment_body %>
      <% end %>
    </p>
  </div>
</div>
<span>♡<%= comment.favorites.count %>︎</span>